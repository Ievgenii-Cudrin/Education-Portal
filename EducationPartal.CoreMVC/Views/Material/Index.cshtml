@model IEnumerable<EducationPartal.CoreMVC.ModelsView.MaterialViewModel>
@using EducationPortal.Domain.Entities
@{
    ViewData["Title"] = "Index";

    PageInfo pager = new PageInfo();
    int pageNumber = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }
}

<h1>Index</h1>

<h3>@ViewBag.Message</h3>

<p>
    <a class="btn btn-primary btn-lg active" asp-action="CreateVideo" asp-controller="Material">Create video</a>
    <a class="btn btn-primary btn-lg active" asp-action="CreateBook" asp-controller="Material">Create book</a>
    <a class="btn btn-primary btn-lg active" asp-action="CreateArticle" asp-controller="Material">Create article</a>
</p>
<div>
    @Html.DisplayFor(m => m)
</div>


<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-id="@pge"> @pge </a>
                </li>
            }
        </ul>
    }
</div>
