            </div>
            <div class="form-group">
                <label asp-for="Quality" class="control-label"></label></ br>
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="Quality" asp-items="Html.GetEnumSelectList<VideoQualityViewModel>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Quality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
