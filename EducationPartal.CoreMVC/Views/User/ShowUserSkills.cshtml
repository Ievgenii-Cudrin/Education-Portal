@model IEnumerable<EducationPortal.CoreMVC.ModelsView.SkillWithCountViewModel>

@{
    ViewData["Title"] = "ShowUserSkills";
}

<h1>ShowUserSkills</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Skill.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountOfPoint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Skill.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountOfPoint)
            </td>
        </tr>
}
    </tbody>
</table>
